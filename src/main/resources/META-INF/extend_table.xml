<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet author="taegeon_woo@tmax.co.kr" id="example-1.0">

        <createTable tableName="CLIENT_AGREEMENT">
            <column name="ID" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="CLIENT_NAME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="AGREEMENT" type="VARCHAR(60000)">
                <constraints nullable="false"/>
            </column>
            <column name="VERSION" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="REALM_NAME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="EMAIL_VERIFICATION">
            <column name="ID" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="EMAIL" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="CODE" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="IS_VERIFIED" type="BOOLEAN" defaultValueBoolean="false"/>
            <column name="VERIFICATION_DATE" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey
                constraintName="PK_CLIENT_AGREEMENT"
                tableName="CLIENT_AGREEMENT"
                columnNames="ID"
        />
        <addPrimaryKey
                constraintName="PK_EMAIL_VERIFICATION"
                tableName="EMAIL_VERIFICATION"
                columnNames="ID"
        />

    </changeSet>

    <changeSet id="user_profile" author="seongmin_lee2@tmax.co.kr">

        <createTable tableName="USER_PROFILE">
            <column name="ID" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="USER_ID" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="SEX" type="VARCHAR(1)">
                <constraints nullable="false"/>
            </column>
            <column name="AGE" type="VARCHAR(3)">
                <constraints nullable="false"/>
            </column>
            <column name="PHONE_NUMBER" type="VARCHAR(13)">
                <constraints nullable="false"/>
            </column>
            <column name="JOB" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <addPrimaryKey
                constraintName="PK_USER_PROFILE"
                tableName="USER_PROFILE"
                columnNames="ID"
        />

    </changeSet>

    <changeSet author="seongmin_lee2@tmax.co.kr" id="example-sql" context="migrate">
        <sql dbms="postgresql">
            ALTER TABLE USER_PROFILE RENAME COLUMN USER_ID TO EMAIL
        </sql>
    </changeSet>

    <changeSet author="seongmin_lee2@tmax.co.kr" id="change_user_profile" context="migrate">
        <sql dbms="postgresql">
            ALTER TABLE USER_PROFILE ADD CONSTRAINT fk_userId foreign key (id) references user_entity(id)
        </sql>
        <sql dbms="postgresql">
            alter table user_profile alter column phone_number drop not null
        </sql>
        <sql dbms="postgresql">
            alter table user_profile alter column sex drop not null
        </sql>
        <sql dbms="postgresql">
            alter table user_profile alter column age drop not null
        </sql>
    </changeSet>

